<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/helloWorldText"
        android:layout_width="386dp"
        android:layout_height="166dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="@string/textHelloWorld"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/welcomeButton"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:layout_marginBottom="120dp"
        android:onClick="onClick"
        android:text="@string/textPlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputName"
        android:layout_width="355dp"
        android:layout_height="52dp"
        android:autofillHints="no"
        android:ems="10"
        android:hint="@string/textName"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameQueryText"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:id="@+id/nameQueryText"
        android:layout_width="326dp"
        android:layout_height="93dp"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="@string/textBeforeBegin"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helloWorldText" />

</androidx.constraintlayout.widget.ConstraintLayout>